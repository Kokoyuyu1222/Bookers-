<div class="container">
  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
    <div class="row">
      <% end %>
      <div class="top-message col-md-offset-3 col-md-6">
       <div class="container-fluid">
         <div class="container">
          <div>
           <h1>welcome to <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers !!</h1>
           <p>In <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers,</p>
           <p>you can share and exchange your opinions , inpressions , and emotions</p>
           <p>about various books!</p>
           <% if user_signed_in? %>
           <div class="row">
             <li>
              <%= link_to "Log in", user_path(current_user.id), class: 'btn btn-info btn-lg btn-block col-xs-10' %>
            </li>
          </div>
          <div class="row">
            <li>
              <%= link_to "Sign up", user_path(current_user.id), class: 'btn btn-success btn-lg btn-block col-xs-10' %>
            </li>
          </div>
          <% else %>
          <div class="row">
            <li>
              <%= link_to "Log in", new_user_session_path, class: 'btn btn-info btn-lg btn-block col-xs-10' %>
            </li>
          </div>
          <div class="row">
            <li>
              <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-success btn-lg btn-block col-xs-10'  %>
            </li>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>