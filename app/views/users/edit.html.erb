<% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
<% end %>

<div>
  <h2 >User info</h2>
</div>
<div>
  <%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
  <div class="alert alert-error">
    <ul>
      <li><%= @user.errors.count %> errors prohibited this obj from being saved:"</li>
      <% @user.errors.full_messages.each do |messege| %>
      <li><%= messege %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div>
    <label>Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
    <span class="fa fa-user form-control-icon" aria-hidden="true">
    </span>
  </div>
  <div>
    <div>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:10*10%>
    </div>
    <label>ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    　<label>Introduction</label>
    <%= f.text_area :introduction %>
  </div>
  <%= f.submit "Update User" %>
  <% end %>
</div>