<main>
	<h1>Editing Book</h1>
	<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<ul>
			<% @book.errors.full_messages.each do |messege| %>
			<li><%= messege %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<h4>title</h4>
	<%= f.text_field :title %>
	<h4>opinion</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
	<% end %>
	<%= link_to 'show',book_path(@book.id) %>
	<%= link_to 'Back', books_path %>
</main>