<main>
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h1>Editing Book</h1>
				<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
				<% if @book.errors.any? %>
				<div class="alert alert-error">
					<ul>
						<li><%= @book.errors.count %> errors prohibited this obj from being saved:"</li>
						<% @book.errors.full_messages.each do |messege| %>
						<li><%= messege %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<div class="row form-group">
					<div class="field row">
						<h4>title</h4>
						<%= f.text_field :title,:class=> "col-xs-12" %>
					</div>
					<div class="field row">
						<h4>opinion</h4>
						<%= f.text_area :body ,:class=> "col-xs-12" %>
					</div>
					<div class="actions row"><button type="submit" class="btn btn-primary btn-lg btn-block">Update Book</button></div>
					<% end %>
				</div>
				<%= link_to 'Show',book_path(@book.id) %>
				<%= link_to 'Back', books_path %>
			</div>
		</div>
	</main>